---
const { employee_id, pseudonym, topic, message } = Astro.props;
---

<div class="flex flex-none flex-col rounded-lg">
  <div class="relative rounded-lg m-5 h-[500px]">
    <div
      class="absolute z-10 flex items-center justify-center opacity-0 hover:opacity-100 w-full min-h-[260px] p-5 bg-gradient-to-br from-pink-500 to-[#f7bd03] rounded-lg"
    >
      <p>{message}</p>
    </div>
    <div>
      <img
        src={`/img/${employee_id}.png`}
        class="bg-slate-300 w-[260px] h-[252px] object-cover rounded-lg shadow-lg ring-1 ring-slate-900/5"
      />
        <img src="/img/click_icon.png" class="animate-bounce -mt-10 h-10 w-10 rounded-full opacity-90"/>
    </div>
    <div class="py-3">
      <div class="z-0 font-bold text-lg text-center">จาก {pseudonym}</div>
      <div class="z-0 font-thin text-xs flex-auto text-center">
        {topic}
      </div>
    </div>
  </div>
</div>
